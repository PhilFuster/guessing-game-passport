extends ./layouts/main-layout.pug
block head-link-list
  +head-links([
    {href: '/stylesheets/css/login.css'}
  ])
block head-script-list
  +head-scripts([
    {src: '/javascripts/login.js'}
  ])
block nav-link-list
  +nav-links([
    {path: '/', desc:'Home'}
  ])
block content
  .container
    main(role="main")
      h1.page-title Guess - Login
      div(class=error ? "error": "hidden") #{err}
      div(class=message ? "message":"hidden" ) #{message}
      form(id="login-form" action="/auth/login" method="post")
        .form-group
          label(for="input-username") Username
          input(
            type="text"
            id="input-username"
            name="username"
            class="form-control"
            aria-describedby="username-help"
            required
            placeholder="Enter username"
          )
          small#username-help(class="form-text text-muted").
            Enter the username you used to signup
        .form-group
          label(for="input-password") Password
          .input-group
            input(
              type="password"
              id="input-password"
              class="form-control"
              aria-describedby="password-help"
              required
              name="password"
              placeholder="Enter password"
            )
          small#username-help(class="form-text text-muted")
            | Password Requirements:
            | 8 character minimum &#9679;
            | One digit &#9679;
            | One special character &#9679;
            | One uppercase
        .d-flex.flex-column
          button(type="submit" class="btn btn-primary") Log In
          a(href="/auth/signup") Create an Account?